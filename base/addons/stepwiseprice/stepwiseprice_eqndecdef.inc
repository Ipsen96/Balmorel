;

QSTEPWISEPRICE_VGFLEVEL(IY411,C,STEPWISEPRICE_L,STEPWISEPRICE_FFF)$(ISTEPWISEPRICE_F_GLOB(IY411,STEPWISEPRICE_FFF) AND (ORD(STEPWISEPRICE_L) LE 7))..
   VSTEPWISEPRICE_VGF_T_STEP(IY411,C,STEPWISEPRICE_L,STEPWISEPRICE_FFF)
         =G=
   VSTEPWISEPRICE_VGF_T_STEP(IY411,C,STEPWISEPRICE_L+1,STEPWISEPRICE_FFF)
;


